<div class="card mx-auto rounded mt-5" style="width: 600px;">
  <h2 class="card-title mx-auto mt-3">Add new Accessory</h2>
  <div class="card-body mb-1">
    <%= form_for(@accessory, url: '/accessory', html: {class: "card-text"}) do |f| %>
      <div class="mb-3">
        <div class="mb-3">
          <%= f.label :name, class: "form-label" %>
          <%= f.text_field :name, class: "form-control", required: true %>
        </div>
        <div class="mb-3">
          <%= f.label :gender, class: "form-label" %>
          <%= f.select :gender, [['Male', 'Male'], ['Female', 'Female']], {}, { class: 'form-select'} %>
        </div>
        <div class="mb-3 row">
          <div class="col-6">
            <%= f.label :price, class: "form-label"%>
            <%= f.number_field :price, class: "form-control", required: true  %>
          </div>
          <div class="col-6">
            <%= f.label :quantity, class: "form-label"%>
            <%= f.number_field :quantity, class: "form-control", required: true %>
          </div>
        </div>
        <div class="d-grid gap-2">
          <%= f.submit "Add Accessory", class: "btn btn-primary mt-3" %>
        </div>
      </div>
    <% end %>
  </div>
</div>