<div class="card mx-auto" style="width: 500px;">
  <h2 class="card-title mx-auto mt-5">Log in</h2>
  <div class="card-body mb-3">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: "card-text"}) do |f| %>
      <div class="mb-3">
        <div class="mb-3">
          <%= f.label :email, class: "form-label" %>
          <%= f.email_field :email, class: "form-control" %>
        </div>

        <div class="mb-3">
          <%= f.label :password, class: "form-label"%>
          <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="field">
            <%= f.check_box :remember_me, class: "me-1"%>
            <%= f.label :remember_me %>
          </div>
        <% end %>
        <div class="d-grid gap-2">
          <%= f.submit "Log in", class: "btn btn-primary mt-3" %>
        </div>
      </div>
    <% end %>
    <%= render "devise/shared/links" %>
  </div>
</div>