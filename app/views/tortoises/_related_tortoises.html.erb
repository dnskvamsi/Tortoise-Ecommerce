<% tortoises.each do |tortoise| %>
  <div class="col-2 mb-4">
    <div class="card shadow-sm rounded">
      <%= link_to tortoise_path(tortoise) do %>
        <%= image_tag "tortoise#{rand(14)}.jpg", class: "card-img-top", alt: tortoise.name, style: "height: 200px; object-fit: cover;" %>
      <% end %>

      <div class="card-body">
        <h6 class="card-text text-center"><%= tortoise.species %></h6>
        <%= render partial: 'shared/show_rating', locals: {rating: tortoise.avg_rating} %>
        <p class="card-text text-start"><%= number_to_currency(tortoise.price) %></p>
        <div class="text-center mt-2">
          <%= link_to "View Profile", tortoise_path(tortoise), class: "btn btn-sm btn-info btn-sm d-block" %>
        </div>
      </div>
    </div>
  </div>
<% end %>
