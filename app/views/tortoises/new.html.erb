<div class="card mx-auto rounded" style="width: 700px;">
  <h2 class="card-title mx-auto mt-2">Add new tortoise</h2>
  <div class="card-body mb-1">
    <%= form_for(@tortoise,  url: tortoises_path, html: {class: "card-text"}) do |f| %>
      <div class="mb-3">
        <div class="mb-3">
          <%= f.label :name, class: "form-label" %>
          <%= f.text_field :name, class: "form-control" %>
        </div>
        <div class="mb-3">
          <%= f.label :species, class: "form-label"%>
          <%= f.text_field :species, class: "form-control" %>
        </div>
        <div class="mb-3 row">
          <div class="col-6">
            <%= f.label :gender, class: "form-label" %>
            <%= f.select :gender, [['Male', 'Male'], ['Female', 'Female']], {}, { class: 'form-select'} %>
          </div>
          <div class="col-6">
            <%= f.label :elite_design, class: "form-label"%>
            <%= f.select :elite_design, [['Yes', 'Yes'], ['No', 'No']], {}, { class: 'form-select'} %>
          </div>
        </div>
        <div class="mb-3 row">
          <div class="col-6">
            <%= f.label :shell_pattern, class: "form-label"%>
            <%= f.text_field :shell_pattern, class: "form-control" %>
          </div>
          <div class="col-6">
            <%= f.label :shell_texture, class: "form-label"%>
            <%= f.text_field :shell_texture, class: "form-control" %>
          </div>
        </div>
        <div class="mb-3 row">
          <div class="col-6">
            <%= f.label :price, class: "form-label"%>
            <%= f.number_field :price, class: "form-control"  %>
          </div>
          <div class="col-6">
            <%= f.label :quantity, class: "form-label"%>
            <%= f.number_field :quantity, class: "form-control"  %>
          </div>
          </div>
        <div class="d-grid gap-2">
          <%= f.submit "Add Inventory", class: "btn btn-primary mt-3" %>
        </div>
      </div>
    <% end %>
  </div>
</div>