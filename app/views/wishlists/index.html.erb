<h1 class="text-center">My Wishlist</h1>
<div class="mb-4 text-center">
  <%= link_to "Back to Browse Listings", browse_listings_path, class: "btn btn-secondary" %>
</div>
<div class="row">
  <% if @wishlist_tortoises.any? %>
    <% @wishlist_tortoises.each do |tortoise| %>
      <% wishlist_item = current_user.wishlists.find_by(tortoise_id: tortoise.id) %>
      <div class="col-lg-3 col-md-4 col-sm-6 mb-4">
        <div class="card shadow-sm h-100">
          <%= image_tag "tortoise#{rand(14)}.jpg", class: "card-img-top", alt: tortoise.name, style: "width: 100%; height: 250px" %>
          <div class="card-body">
            <h5 class="card-title text-center"><%= tortoise.name %></h5>
            <p class="card-text"><strong>Species:</strong> <%= tortoise.species %></p>
            <p class="card-text"><strong>Price:</strong> <%= number_to_currency(tortoise.price) %></p>
          </div>
          <div class="card-footer text-center">
            <%= button_to "Remove", wishlist_path(wishlist_item.id), method: :delete, class: "btn btn-danger btn-sm" %>
          </div>
        </div>
      </div>
    <% end %>
  <% end %>
  <% if @wishlist_accessories.any? %>
    <% @wishlist_accessories.each do |accessory| %>
      <% wishlist_item = current_user.wishlists.find_by(accessory_id: accessory.id) %>
      <div class="col-lg-3 col-md-4 col-sm-6 mb-4">
        <div class="card shadow-sm h-100">
          <%= image_tag "tortoise_accessory#{rand(9)}.jpg", class: "card-img-top", alt: accessory.name, style: "width: 100%; height: 250px" %>
          <div class="card-body">
            <h5 class="card-title text-center"><%= accessory.name %></h5>
            <p class="card-text"><strong>Price:</strong> <%= number_to_currency(accessory.price) %></p>
          </div>
          <div class="card-footer text-center">
            <%= button_to "Remove", wishlist_path(accessory.id), method: :delete, class: "btn btn-danger btn-sm" %>
          </div>
        </div>
      </div>
    <% end %>
  <% end %>
  <% if @wishlist_tortoises.none? && @wishlist_accessories.none? %>
    <div class="col-12">
      <p class="text-center text-muted">Your wishlist is empty.</p>
    </div>
  <% end %>
</div>
